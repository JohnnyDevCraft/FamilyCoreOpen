@page "/Account/ConfirmEmail"

@using System.Text
@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.WebUtilities
@using FamilyCore.Data
@using FamilyCore.Client.Components.Widget.Buttons

@inject UserManager<ApplicationUser> UserManager
@inject IdentityRedirectManager RedirectManager

<PageTitle>Confirm email</PageTitle>

<div class="max-w-3xl mx-auto py-12">
    <div class="p-8 rounded-xl shadow bg-white border border-[color:var(--color-border-muted)] space-y-4 text-center">
        <div class="space-y-2">
            <p class="text-sm font-semibold tracking-wide text-[color:var(--color-text-muted-dark)] uppercase">Email confirmation</p>
            <h1 class="text-3xl font-bold text-[color:var(--color-text-strong)]">Confirm your account</h1>
            <p class="text-[color:var(--color-text-muted-dark)]">We’re activating your Family Center access. This keeps your finances, chores, and schedules secure.</p>
        </div>

        <StatusMessage Message="@statusMessage"/>

        <div class="flex justify-center gap-3 pt-2">
            <ThemedButton Color="ThemeColor.Primary" OnClick="GoToLogin">Go to login</ThemedButton>
            <ThemedButton Variant="ButtonVariant.Outline" Color="ThemeColor.Primary" OnClick="GoToResend">Resend email</ThemedButton>
        </div>
    </div>
</div>

@code {
    private string? statusMessage;

    [CascadingParameter] private HttpContext HttpContext { get; set; } = default!;

    [SupplyParameterFromQuery] private string? UserId { get; set; }

    [SupplyParameterFromQuery] private string? Code { get; set; }

    protected override async Task OnInitializedAsync()
    {
        if (UserId is null || Code is null)
        {
            RedirectManager.RedirectTo("");
            return;
        }

        var user = await UserManager.FindByIdAsync(UserId);
        if (user is null)
        {
            HttpContext.Response.StatusCode = StatusCodes.Status404NotFound;
            statusMessage = $"Error loading user with ID {UserId}";
        }
        else
        {
            var code = Encoding.UTF8.GetString(WebEncoders.Base64UrlDecode(Code));
            var result = await UserManager.ConfirmEmailAsync(user, code);
            statusMessage = result.Succeeded ? "Thank you for confirming your email." : "Error confirming your email.";
        }
    }

    void GoToLogin() => RedirectManager.RedirectTo("Account/Login");
    void GoToResend() => RedirectManager.RedirectTo("Account/ResendEmailConfirmation");
}
